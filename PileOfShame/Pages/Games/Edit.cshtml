@page "{id:int?}"
@model PileOfShame.Pages.Games.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GameModel.ID" />
            <div class="form-group">
                <label asp-for="GameModel.Title" class="control-label"></label>
                <input asp-for="GameModel.Title" class="form-control" />
                <span asp-validation-for="GameModel.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameModel.Genre" class="control-label"></label>
                <input asp-for="GameModel.Genre" class="form-control" />
                <span asp-validation-for="GameModel.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameModel.Platform" class="control-label"></label>
                <input asp-for="GameModel.Platform" class="form-control" />
                <span asp-validation-for="GameModel.Platform" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameModel.ReleaseDate" class="control-label"></label>
                <input asp-for="GameModel.ReleaseDate" class="form-control" />
                <span asp-validation-for="GameModel.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
