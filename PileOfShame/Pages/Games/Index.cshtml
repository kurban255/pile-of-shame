@page "{searchString?}"
@model PileOfShame.Pages.Games.IndexModel

@{
    ViewData["Title"] = "Games";
}

<h1>Games</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form class="form-inline">
    <label class="mb-4 mr-sm-2">Title:</label>
    <input type="text" asp-for="SearchString" class="form-control mb-4 mr-sm-2" />
    <select asp-for="GameGenre" asp-items="Model.Genres" class="form-control mb-4 mr-sm-2">
        <option value="">All genres</option>
    </select>
    <select asp-for="GamePlatform" asp-items="Model.Platforms" class="form-control mb-4 mr-sm-2">
        <option value="">All platforms</option>
    </select>
    <input type="submit" value="Filter" class="btn btn-primary mb-4 mr-sm-2" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GameModel[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameModel[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameModel[0].Platform)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameModel[0].ReleaseDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.GameModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Platform)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
